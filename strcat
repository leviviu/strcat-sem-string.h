/*CONCATENAR DUAS STRINGS SEM USAR <string.h> */

#include <stdio.h>

#define MAX1 100
#define MAX 200

int main(void){

	char str1[MAX1],str2[MAX1],str3[MAX];
	int i,j,strlenCASEIRO ;

	printf("Write the firt string: ");
	scanf("%99[^\n]s",str1); /Comando usado para a string ler espa√ßo, dentro do scanf/
	fflush(stdin);

	printf("Write the second string: ");
	scanf("%99[^\n]s",str2);
	fflush(stdin);


	for(i=0; str1[i]!='\0'; i++){
		str3[i]=str1[i];
		strlenCASEIRO = i;
	}
	for(i=strlenCASEIRO +1, j=0 ; str2[j]!='\0' ; i++, j++){
		str3[i] = str2[j];
		str3[i+1]='\0';
	}
	printf("Concatenated string: ");
	puts(str3);

	return 0;
}
